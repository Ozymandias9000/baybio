@import url('BackgroundLayer.css')
@import url('index.css')
@import url('Register.css')
@import url('SignIn.css')
@import url('Main.css')

/* Center container */
.flex-container--center
  display flex
  height 100vh
  width 100vw
  justify-content center
  align-items center
  text-align center

/* Classes for banner text */
.splash-banner-text
  display grid
  grid 2fr 1fr 2fr 2fr / 1fr
  align-items center
  justify-content center
  transition all 0.2s
  min-height 300px
  max-height 60vh
  width 80vw

.splash-banner-text--h1,
.splash-banner-text--ellipses,
.splash-banner-text--h3
  letter-spacing 3px
  font-weight 300

.splash-banner-text > input
  margin 0 auto
  width 40vw
  background none
  border none
  border-bottom 1px solid black
  padding-bottom 2px
  text-align center
  font-size 2em
  font-family inherit
  outline none
  & :focus
    outline none

/* Classes for letter transitions */

.textAppear
  animation move 0.6s
  position relative

@keyframes move
  from
    top 50px
    opacity 0
  to
    top 0
    opacity 1

