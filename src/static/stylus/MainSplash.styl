/* Classes for splash buttons & container*/

.splash-button--container
  padding 50px
  grid-row 3 / span 1
  display grid
  grid 1fr 1fr / 1fr
  grid-gap 50px
  justify-items center
  align-items center
  & .round-button--splash
    grid-column 1 /-1
    &:nth-of-type(1)
      background var(--blue)
    &:nth-of-type(2)
      background var(--pink)

/* ------------- Non-mobile --------------- */
@media only screen and (min-width:600px)
 .splash-button--container
    display flex
    justify-content space-between
    align-items center