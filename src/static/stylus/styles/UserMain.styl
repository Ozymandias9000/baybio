// Sign out, Sign In, Reg
.auth-buttons--container
  top 0
  right 0
  position fixed
  z-index 99
  button
    letter-spacing 2px
    text-decoration none
    background var(--pink)
    color var(--white)
    box-shadow none
    border none
    cursor pointer
    padding 8px
    width 130px
    transition all .2s
    &:hover
      transform scale(1.01)
      box-shadow: 0 1px 1px rgba(0,0,0,0.12), 0 1px 1px rgba(0,0,0,0.24);
    &:nth-of-type(1)
      border-right 1px solid var(--white)
    &:nth-of-type(2)
      border-left 1px solid var(--white)
    & a
      text-decoration none
      color var(--white)

