.grid-container--user-main
  display grid
  grid 1fr 1fr / 1fr 1fr
  width 95vw
  height 95vh

.round-button--post
  position relative
  top 75px
  padding 10px
  background var(--red)
  color var(--white)

/* New Post */

#post-form
  height 80vh
  position relative
  top 90px
  justify-content space-around
  & textarea
    height 20vh
  & input[type='text'],
  & textarea
    width 75vw
    padding 10px
    color var(--black)
    background #ccc
    border none
    border-bottom 1px solid black
    font-family inherit
    outline none
    opacity .6
    transition all .2s
    &:focus
      outline none
      opacity .9