.photo-card
  padding 0
  overflow hidden
  display grid
  grid-template-columns 1
  grid-template-rows: 320px auto
  justify-content center
  align-items center
  background rgba(240,240,240,.5)
  div
    display flex
    justify-content center
    align-items center
  .photo-card--image-container
    cursor pointer
    grid-column 1 / -1
    grid-row 1 / span 1
    img
      width 100%
      height 100%
      object-fit cover
  .photo-card--description-container
    height 100%
    grid-column 1 / -1
    grid-row 2 / span 1
    background rgba(244,244,244,.8)