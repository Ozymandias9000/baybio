/* Classes for splash banner text */
.splash-banner-text
  display grid
  grid 4fr 4fr 2fr 2fr / 1fr
  align-items center
  justify-content center
  transition all 0.2s
  min-height 600px
  max-height 60vh
  width 80vw

.splash-banner-text--h1,
.splash-banner-text--ellipses,
.splash-banner-text--h3
  letter-spacing 3px
  font-weight 300

.splash-banner-text--h1
  text-shadow: 1px 1px 2px rgba(0,0,0,.2)

.splash-banner-text > input
  margin 0 auto
  width 75vw
  background none
  border none
  border-bottom 1px solid black
  padding-bottom 2px
  text-align center
  font-size 2em
  font-family inherit
  outline none
  &:focus
    outline none


/* Classes for splash buttons & container*/

.splash-button--container
  padding 50px
  grid-row 3 / span 1
  display grid
  grid 1fr 1fr / 1fr
  grid-gap 50px
  justify-items center
  align-items center
  & .round-button--splash
    grid-column 1 /-1
    color var(--white)
    &:nth-of-type(1)
      background var(--blue)
    &:nth-of-type(2)
      background var(--pink)

/* ------------- Non-mobile --------------- */
@media only screen and (min-width:600px)
 .splash-button--container
    display flex
    justify-content space-between
    align-items center