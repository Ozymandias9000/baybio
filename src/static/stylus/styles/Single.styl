.single-photo--container
	display flex
	max-width 1000px
	max-height 80vh
	min-width 70vw
	margin 0 auto
	padding 1rem
	border 4px solid #edeeed
	div
		position relative
		display flex
		flex 1
		width 100%
		img
			width 100%
			max-height 100%
			margin 0
			object-fit contain
	.comments--container
		flex-direction column