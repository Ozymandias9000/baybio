.single-content--container
	display flex
	max-width 95vw
	max-height 80vh
	min-width 70vw
	margin 0 auto
	padding 2rem
	border 4px solid #edeeed
	.single-photo-and-caption--container
		position relative
		display flex
		flex-direction: column
		flex 1
		width 100%
		img
			width 100%
			max-height 100%
			margin 0
			object-fit contain
	.comments--container
		flex-direction column
@media only screen and (max-width: 600px)
	.single-content--container
		border none