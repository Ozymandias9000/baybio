@import url('https://fonts.googleapis.com/css?family=Montserrat:300,400,500');

:root
  font-size 20px
  letter-spacing 2px
  line-height 1.5

  --black #222
  --pink rgb(255, 192, 203)
  --blue rgb(100, 149, 237)
  --white rgb(250,250,250)
  --red rgb(220,20,60)

*
  box-sizing border-box

p
  padding 0
  font-size .75rem
  color var(--black)
  font-weight 200
  letter-spacing 3px

body
  margin: 0
  padding: 0
  font-family: 'Montserrat', sans-serif
  width: 100vw
  height: 100vh
  max-height: 100vh
  overflow none
  color var(--black)
  ::-webkit-scrollbar
    display: none
