/* New Post */

#post-form
  height 80vh
  top 30px
  padding 20px
  position relative
  justify-content space-between
  align-items center
  text-align center
  .round-button--upload
    height 15vh
    text-align center
    width 15vh
    padding 30px
    background var(--red)
    color var(--white)
  & textarea
    height 20vh
  & input[type='text'],
  & textarea
    width 75vw
    padding 10px
    color var(--black)
    background #ccc
    border none
    border-bottom 1px solid black
    font-family inherit
    outline none
    opacity .6
    transition all .2s
    &:focus
      outline none
      opacity .9

@media only screen and (max-width: 600px)
  #post-form
    & textarea
      min-height 65px