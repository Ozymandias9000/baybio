/* New Post */
.round-button--post
  height 15vh
  width 15vh
  min-height 120px
  min-width 120px
  text-align center
  padding 30px
  background var(--red)
  color var(--white)

#post-form
  height 90vh
  top 30px
  padding 20px
  position relative
  justify-content space-between
  align-items center
  text-align center
  .round-button--upload
    height 15vh
    width 15vh
    min-height 120px
    min-width 120px
    text-align center
    padding 30px
    background var(--red)
    color var(--white)
  & textarea
    height 20vh
  & input[type='text'],
  & textarea
    width 75vw
    padding 10px
    color var(--black)
    caret-color var(--blue)
    background #ccc
    border none
    border-bottom 1px solid var(--pink)
    font-family inherit
    outline none
    opacity .6
    transition all .2s
    &:focus
      transform scale(1.05)
      outline none
      opacity .8
      box-shadow: 0 1px 2px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24);

@media only screen and (max-width: 600px)
  #post-form
    & textarea
      min-height 65px
    .round-button--upload
      height 20vh
      width 20vh